<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.adamnickle.reptrack.ui.completedExerciseSet.CompletedExerciseSetFragmentViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/reps_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:elevation="3dp"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_center"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/set_rep_item" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_center"
            app:layout_constraintStart_toEndOf="@+id/reps_list"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MIN:"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="28sp"
                android:text="@{`` + vm.repMin}"
                tools:text="0.0" />

            <include layout="@layout/accent_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAX:"
                android:textSize="20sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="28sp"
                android:text="@{`` + vm.repMax}"
                tools:text="0.0" />

            <include layout="@layout/accent_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AVG:"
                android:textSize="20sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="28sp"
                android:text="@{`` + vm.repAvg}"
                tools:text="0.0" />

            <include layout="@layout/accent_separator" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>